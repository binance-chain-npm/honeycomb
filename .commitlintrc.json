{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-empty": [2, "never"],
    "subject-case": [2, "always", ["sentence-case"]],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      ["chore", "docs", "feat", "fix", "perf", "refactor", "revert", "style", "test"]
    ]
  }
}
